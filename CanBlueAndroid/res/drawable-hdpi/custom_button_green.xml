<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">


	<item android:state_pressed="true" >
  		<shape>
  			<solid android:color="@color/green" />
 			<stroke
   		 		android:width="1dp"
   		 		android:color="@color/black" />
  			<corners android:radius="3dp" />
  			<padding
   		 		android:left="10dp"
   		 		android:top="10dp"
   		 		android:right="10dp"
  				android:bottom="10dp" />
 		</shape>
 	</item>
 	
    <item>        
        <shape>
            <gradient
                android:endColor="@color/green02"
                android:startColor="@color/green"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/black" />
            <corners
                android:radius="7dp" />
            <padding
                android:left="1dp"
                android:top="1dp"
                android:right="1dp"
                android:bottom="1dp" />
        </shape>
    </item>
</selector>
